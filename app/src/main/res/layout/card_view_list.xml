<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardPreventCornerOverlap="false"
        card_view:elevation="@dimen/value_8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/value_16dp">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/list_product_image"
                    android:src="@drawable/default_product" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/value_16dp"
                android:layout_marginTop="@dimen/value_16dp"
                android:layout_marginBottom="@dimen/value_8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/list_pproduct_name"
                    android:hint="@string/productname"
                    android:textColor="@color/colorDarkGray"
                    android:textStyle="bold"
                    android:textSize="@dimen/value_16sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/list_product_price"
                    android:hint="@string/productprice"
                    android:textColor="@color/colorBlack"
                    android:textSize="12sp"
                    android:layout_marginTop="@dimen/value_8dp"/>

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:layout_gravity="left"
                    android:src="@drawable/star_rating" />

              <!--  <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/list_product_description"
                    android:hint="@string/description"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/value_16dp"
                    android:layout_marginTop="@dimen/value_8dp"/>-->

            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorGray"/>
</LinearLayout>